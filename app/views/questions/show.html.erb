<div class="question">
  <table>
    <tbody>
      <tr>
        <td class="votecell">
          <div class="vote">
            <a>
            <%= link_to  question_change_vote_up_path(question_id: @question), class: "vote-up", title: "This question shows research effort; it is usefual and clear", method: 'post' do %>
              <%= image_tag "vote_up.png" %>
            <% end %>
          </a>
          <span itemprop="upvoteCount" class="vote-count-post"><%= @question.vote %></span>
          <a>
            <%= link_to question_change_vote_down_path(question_id: @question), class: "vote_down", title: "This question does not show any research effort; it is unclear or not useful", method: 'post' do %>
              <%= image_tag "vote_down.png" %>
            <% end %>
          </a>

        </div>
        </td>
        <td class = "postcell">
          <p id="notice"><%= notice %></p>

          <p>
            <strong>Title:</strong>
            <%= @question.title %>
          </p>

          <p>
            <strong>Message:</strong>
            <%= @question.message %>
          </p>

          <p>
            <strong>Date creation:</strong>
            <%= @question.created_at %>
          </p>

          <p>
            <strong>Autor name:</strong>
            <%= @question.user.name %>
          </p>
        </td>
      </tr>
    </tbody>
  </table>
</div>

<div class="span8">
  <% if @question.answers.any? %>
    <h3>All Answers (<%= @question.answers.count %>)</h3>
    <ol class="answers">
      <%= render @answers %>
    </ol>
  <% end %>
</div>
<div>
  <h4>This question has been viewed <%= pluralize(@question.visits_counter, "time") %> </h4>
</div>

<%= link_to 'Edit', edit_question_path(@question) %> |
<%= link_to 'Destroy', @question, method: :delete, data: { confirm: 'Are you sure?' } %> |
<%= link_to 'Back', questions_path %>
<%= link_to 'Ответить!', new_question_answer_path(@question) %>
